@model KooliProjekt.Data.Client

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Client</h1>

<h3>Are you sure you want to delete this client?</h3>
<div>
    <h4>Client: @Model.Name</h4>
    <p><strong>Location:</strong> @Model.Location</p>
    <hr />

    <!-- Метод POST для отправки данных на сервер -->
    <form method="post" asp-action="DeleteConfirmed" asp-route-id="@Model.Id">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
